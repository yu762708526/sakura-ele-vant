border-1px($color)
  position relative
  border none
  &::after
    content ''
    width 200%
    height 200%
    position absolute
    top 0
    left 0
    border 1px solid $color
    border-radius 4px
    -webkit-transform scale(0.5, 0.5)
    transform scale(0.5, 0.5)
    -webkit-transform-origin top left
  // // 根据像素比缩放1px像素边框
