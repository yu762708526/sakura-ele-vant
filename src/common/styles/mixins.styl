  // @media only screen and (-webkit-device-pixel-ratio 3)
  // .border-1px
  // &::before
  // transform scaleY(0.333333)
  // 根据像素比来使用 2x图 3x图
  bg-image($url)
    background-image url($url + '@2x.png')
    @media (-webkit-min-device-pixel-ratio 3), (min-device-pixel-ratio 3)
      background-image url($url + '@3x.png')
  // 清除浮动
  clearFix()
    *zoom 1
    &::after
      content ''
      display block
      clear both